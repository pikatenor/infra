{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:pinDigests"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "mirror.gcr.io/bitnami/postgresql",
        "c.p1kachu.net/*",
        "registry.p1kachu.net:5000/*"
      ],
      "enabled": false
    },
    {
      "groupName": "cert-manager",
      "matchDatasources": ["docker"],
      "matchPaths": [
        "yuzu/**"
      ],
      "matchPackageNames": [
        "quay.io/jetstack/cert-manager-*"
      ]
    },
    {
      "matchUpdateTypes": [
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/^borg4/.+\\.ya?ml$/",
      "/^starlight30/.+\\.ya?ml$/",
      "/^yuzu/.+\\.ya?ml$/"
    ],
    "ignorePaths": [
      ".*fleet\\.yaml$",
      "yuzu/cattle-system/"
    ]
  }
}
