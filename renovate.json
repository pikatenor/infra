{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:pinDigests"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "kubernetes": {
    "fileMatch": [
      "^borg4/.+\\.ya?ml$",
      "^starlight30/.+\\.ya?ml$",
      "^yuzu/.+\\.ya?ml$"
    ],
    "ignorePaths": [
      ".*fleet\\.yaml$",
      "yuzu/cattle-system/"
    ]
  }
}
